<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingClass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.HomeFragment"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:focusable="true"
            android:background="@drawable/layout_stroke"
            android:focusableInTouchMode="true">

            <Spinner

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/layout_stroke"

                android:dropDownWidth="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/search_spinner"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <EditText
                    android:id="@+id/edit_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:fontFamily="@font/one_mobile_pop"
                    android:hint="검색어를 입력하세요."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hmmm"
                    android:imeOptions="actionDone"
                    android:textSize="8pt"
                    />
                <ImageButton
                    android:id="@+id/search_btn"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_search_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/layout_stroke"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/one_mobile_pop"
                    android:text="관심 키워드"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="MissingConstraints" />
                <ImageView
                    android:id="@+id/delete_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_delete_sweep_24"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/interest_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="13dp"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:background="@drawable/layout_stroke"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/one_mobile_pop"
                    android:hint="추가하고 싶은 키워드를 입력하세요."
                    android:textColor="@color/black"
                    android:textColorHint="@color/hmmm"
                    android:imeOptions="actionDone"
                    android:textSize="8pt"/>
                <ImageButton
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_add_circle_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:padding="5dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/kospi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                android:layout_weight="5"
                android:background="@drawable/layout_stroke"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코스피"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/one_mobile_pop"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/kospi_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""

                        android:fontFamily="@font/one_mobile_pop"
                        android:gravity="center"
                        android:textColor="@color/black"

                        android:layout_marginLeft="6dp"
                        android:textSize="25sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/kospi_change_plus_value_shape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/kospi_change_value"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:src="@drawable/baseline_arrow_drop_up_24"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/kospi_change_minus_value_shape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/kospi_change_value"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:src="@drawable/baseline_arrow_drop_down_24"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/kospi_change_value"
                                android:layout_width="wrap_content"
                                app:layout_constraintLeft_toRightOf="@+id/kospi_change_plus_value_shape"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:textSize="12sp"
                                android:padding="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text=""
                                app:layout_constraintTop_toTopOf="parent"
                                android:textColor="@color/blue"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints" />
                            <TextView
                                android:id="@+id/blank"
                                android:layout_width="2dp"
                                android:padding="5dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toLeftOf="@+id/kospi_change_plus_rate"
                                app:layout_constraintLeft_toRightOf="@+id/kospi_change_value"
                                tools:ignore="MissingConstraints" />
                            <TextView
                                android:id="@+id/kospi_change_plus_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/blank"
                                android:textSize="12sp"
                                android:padding="5dp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/one_mobile_pop"
                                android:text=""

                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:ignore="MissingConstraints" />
                            <TextView
                                android:id="@+id/kospi_change_minus_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                android:padding="5dp"
                                app:layout_constraintLeft_toRightOf="@id/blank"
                                android:textSize="12sp"
                                android:textColor="@color/blue"
                                android:fontFamily="@font/one_mobile_pop"
                                android:text="+050.58%"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                android:layout_weight="5"
                android:background="@drawable/layout_stroke"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="코스닥"
                        android:gravity="center"
                        android:fontFamily="@font/one_mobile_pop"
                        android:textColor="@color/black"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/kosdak_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/one_mobile_pop"
                        android:layout_marginLeft="6dp"
                        android:textSize="25sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/kosdak_change_plus_value_shape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/kosdak_change_value"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:src="@drawable/baseline_arrow_drop_up_24"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/kosdak_change_minus_value_shape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/kosdak_change_value"
                                android:gravity="right|center"
                                android:paddingLeft="15dp"
                                android:src="@drawable/baseline_arrow_drop_down_24"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/kosdak_change_value"
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                app:layout_constraintLeft_toRightOf="@+id/kosdak_change_plus_value_shape"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text=""
                                app:layout_constraintTop_toTopOf="parent"
                                android:textSize="12sp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/one_mobile_pop"
                                tools:ignore="MissingConstraints" />
                            <TextView
                                android:id="@+id/blank2"
                                android:layout_width="2dp"
                                android:padding="5dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toLeftOf="@+id/kosdak_change_plus_rate"
                                app:layout_constraintLeft_toRightOf="@+id/kosdak_change_value"
                                tools:ignore="MissingConstraints" />
                            <TextView
                                android:id="@+id/kosdak_change_plus_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/blank2"
                                android:textSize="12sp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/one_mobile_pop"
                                android:text="+050.58%"
                                android:padding="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:ignore="MissingConstraints"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/kosdak_change_minus_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/blank2"
                                android:textSize="12sp"
                                android:textColor="@color/blue"
                                android:padding="5dp"
                                android:fontFamily="@font/one_mobile_pop"
                                android:text=""
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:ignore="MissingConstraints"
                                android:visibility="visible"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/layout_stroke"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:text="업종상위 Top3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/right_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="60dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/see_more1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:fontFamily="@font/one_mobile_pop"
                    android:text="더보기"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:padding="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_margin="8dp"
            android:elevation="20dp"
            android:background="@drawable/layout_stroke"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="테마상위 Top3"
                    android:textSize="20sp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/right_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/see_more2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:clickable="true"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:layout_marginRight="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="false"
                android:padding="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_margin="8dp"
            android:elevation="20dp"
            android:background="@drawable/layout_stroke"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="종목 상승률 순위"
                    android:textSize="20sp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/right_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/see_more3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:clickable="true"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:layout_marginRight="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="false"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_margin="8dp"
            android:elevation="20dp"
            android:background="@drawable/layout_stroke"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="주요뉴스"
                    android:textSize="20sp"
                    android:fontFamily="@font/one_mobile_pop"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="false"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="펼치기"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/one_mobile_pop"
                android:clickable="true"
                android:background="@drawable/rounded_corner2"/>

            <TextView
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="접기"
                android:fontFamily="@font/one_mobile_pop"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:visibility="gone"
                android:clickable="true"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner2"/>
        </LinearLayout>

      </LinearLayout>
</androidx.core.widget.NestedScrollView>