<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/chatbot_send_box"
        android:backgroundTint="@android:color/darker_gray"
        android:padding="10dp"
        android:text="샘플 메시지입니다"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/one_mobile_pop" />

    <LinearLayout
        android:id="@+id/chatbot_message_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ic_chatbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/chatbot_message"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chatbot_receive_box"
            android:backgroundTint="@color/gray"
            android:padding="10dp"
            android:text="샘플 봇 메시지입니다"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>


</RelativeLayout>